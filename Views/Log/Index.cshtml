<main>
    <h1>Log time</h1>
    <div class="container-fluid py-5 m-0 p-0">
        <div class="row row-cols-3 g-2">
            <input type="date" class="form-control col fs-4">
            <div class="col">
                <label for="startTime">Start time</label>
                <input id="startTime" type="time" class="form-control fs-4">
            </div>
            <div class="col">
                <label for="endTime">End time</label>
                <input id="endTime" type="time" class="form-control fs-4">
            </div>
            <div class="col">
                <label for="duration">Duration</label>
                <input id="duration" type="time" class="form-control fs-4">
            </div>
        </div>
            
        <div class="mt-4">
            <label for="taskTitle" class="form-label">Title</label>
            <input type="text" class="form-control" id="taskTitle">
        </div>

        <div class="mt-2">
            <label for="taskDescription" class="form-label">Description</label>
            <textarea class="form-control" id="taskDescription" rows="3"></textarea>
        </div>
        
        <button class="btn btn-primary mt-2">Submit</button>
        <button class="btn btn-secondary mt-2">Clear</button>
        
    </div>
    
</main>